<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/christmas_red"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp" />

        <!-- Image Section -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/recycler_detail"
            android:contentDescription="Market Image"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/image_background"
            android:elevation="4dp" />

        <!-- Description Section -->
        <TextView
            android:id="@+id/detailDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A detailed description of the market goes here. This includes information about its history, special features, and any other relevant details."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/white"
            android:background="@drawable/description_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Action Button -->
        <Button
            android:id="@+id/showMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show on Map"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />
    </LinearLayout>
</ScrollView>
